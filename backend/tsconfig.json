{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "paths": {
      "@types/*": ["@types/*"]
    },
    "baseUrl": ".",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "@types/**/*", "types/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
