{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "types"  // This makes your types folder a global types location
    ],
    "paths": {
      "@types/*": ["types/*"]  // For explicit imports
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "@types/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}